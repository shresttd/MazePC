		int level = 100 ;							//battery level is above 2500
		testBot.setBatteryLevel(level);
		for (level = 0; level <= INITIAL_BATTERY_LEVEL ; level ++) {
			testBot.setBatteryLevel(level);
			assertTrue ( testBot.getBatteryLevel() == level ) ;
		}
	}
	
