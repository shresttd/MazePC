	@Test
	public void testBatteryLevelAfterLeftRotation() {
		
		Turn turn = Robot.Turn.LEFT ;
		
		testBot.rotate(turn);
		assertTrue (testBot.getBatteryLevel() == INITIAL_BATTERY_LEVEL - ROTATE_90 ) ;
		
